# Strapi production environment configuration
# Copy to /srv/cs/env/strapi.env and replace placeholders.

NODE_ENV=production
PORT=1337
HOST=0.0.0.0
URL=https://content.cockpitsimulator.com
ADMIN_URL=https://content.cockpitsimulator.com/admin

DATABASE_CLIENT=postgres
DATABASE_URL=postgres://cs:change-me-password@host.docker.internal:5432/strapi_production
DATABASE_SCHEMA=public

APP_KEYS=change-me-app-key-1,change-me-app-key-2,change-me-app-key-3,change-me-app-key-4
API_TOKEN_SALT=change-me-api-token-salt
ADMIN_JWT_SECRET=change-me-admin-jwt
TRANSFER_TOKEN_SALT=change-me-transfer-token
JWT_SECRET=change-me-jwt

# Uploads & integrations
UPLOAD_PROVIDER=cloudflare-r2
R2_PUBLIC_URL=https://assets.cockpitsimulator.com
SENDGRID_API_KEY=change-me-sendgrid
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/.../...
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/.../.../...
