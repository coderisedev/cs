# Medusa production environment configuration
# Copy to /srv/cs/env/medusa.env and replace placeholders.

# Database
DATABASE_URL=postgres://cs:change-me-password@host.docker.internal:5432/medusa_production
REDIS_URL=redis://host.docker.internal:6379

# Secrets
JWT_SECRET=change-me-jwt-secret
COOKIE_SECRET=change-me-cookie-secret

# URLs & CORS
STORE_CORS=https://cockpitsimulator.com,https://staging.cockpitsimulator.com
ADMIN_CORS=https://dashboard.cockpitsimulator.com
AUTH_CORS=https://cockpitsimulator.com

# OAuth providers
GOOGLE_CLIENT_ID=google-client-id
GOOGLE_CLIENT_SECRET=google-client-secret
GOOGLE_OAUTH_CALLBACK_URL=https://api.cockpitsimulator.com/auth/google/callback

DISCORD_CLIENT_ID=discord-client-id
DISCORD_CLIENT_SECRET=discord-client-secret
DISCORD_OAUTH_CALLBACK_URL=https://api.cockpitsimulator.com/auth/discord/callback

FACEBOOK_CLIENT_ID=facebook-client-id
FACEBOOK_CLIENT_SECRET=facebook-client-secret
FACEBOOK_OAUTH_CALLBACK_URL=https://api.cockpitsimulator.com/auth/facebook/callback

# Networking
PORT=9000
HOST=0.0.0.0
