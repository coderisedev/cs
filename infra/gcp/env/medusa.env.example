# Medusa production environment configuration
# Copy to /srv/cs/env/medusa.env and replace placeholders.

# Database
DATABASE_URL=postgres://cs:change-me-password@host.docker.internal:5432/medusa_production
REDIS_URL=redis://host.docker.internal:6379

# Secrets
JWT_SECRET=change-me-jwt-secret
COOKIE_SECRET=change-me-cookie-secret

# URLs & CORS
# Frontend origins allowed to call the Store API (comma-separated)
STORE_CORS=https://prd.aidenlux.com,https://staging.aidenlux.com
# Admin UI origin (Medusa Admin is served under /app/admin on the API domain by default)
ADMIN_CORS=https://api.aidenlux.com
# Auth origins (OAuth callbacks, etc.). Support both prod and staging storefront domains
AUTH_CORS=https://prd.aidenlux.com,https://staging.aidenlux.com

# Networking
PORT=9000
HOST=0.0.0.0

# -------------------------------------------
# Observability
# -------------------------------------------
# Sentry Error Tracking
SENTRY_DSN=your-sentry-dsn
