# Local development environment for CS Storefront (Next.js)

# Medusa backend (production API is fine for local frontend dev)
MEDUSA_BACKEND_URL=https://api.aidenlux.com

# Publishable key from Medusa Admin → Settings → Publishable API Keys
NEXT_PUBLIC_MEDUSA_PUBLISHABLE_KEY=pk_replace_me

# Default region for storefront routing
NEXT_PUBLIC_DEFAULT_REGION=us

# Google OAuth (popup)
NEXT_PUBLIC_GOOGLE_CLIENT_ID=
NEXT_PUBLIC_ENABLE_GOOGLE_OAUTH_POPUP=true

# Strapi content API (optional for blog)
STRAPI_API_URL=https://content.aidenlux.com
STRAPI_API_TOKEN=

# ISR revalidate secret (optional for local)
REVALIDATE_SECRET=dev_only_secret

# PayPal payment (get from https://developer.paypal.com/dashboard/)
NEXT_PUBLIC_PAYPAL_CLIENT_ID=your-paypal-client-id

# Sentry Error Tracking (get from https://sentry.io)
# Client-side DSN (exposed to browser)
NEXT_PUBLIC_SENTRY_DSN=
# Server-side DSN (same value)
SENTRY_DSN=
# Organization and project slugs for source map uploads
SENTRY_ORG=your-org
SENTRY_PROJECT=dji-storefront
# Auth token for CI/CD source map uploads (from https://sentry.io/settings/auth-tokens/)
SENTRY_AUTH_TOKEN=
# Enable in development (optional)
SENTRY_ENABLED=false

# PostHog Analytics (get from https://posthog.com)
# Project API key from PostHog → Project Settings → Project API Key
NEXT_PUBLIC_POSTHOG_KEY=phc_xxx
# API host (US: https://us.i.posthog.com, EU: https://eu.i.posthog.com)
NEXT_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com
