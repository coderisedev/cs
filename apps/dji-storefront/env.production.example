# Medusa storefront (Next.js) production env template

# Base URLs for live backends
MEDUSA_BACKEND_URL=https://api.aidenlux.com
STRAPI_API_URL=https://content.aidenlux.com

# Medusa publishable API key (generated in Medusa Admin → Settings → Publishable API Keys)
NEXT_PUBLIC_MEDUSA_PUBLISHABLE_KEY=pk_live_replace_me

# Default customer region (two-letter Medusa region code, e.g. 'us', 'eu')
NEXT_PUBLIC_DEFAULT_REGION=us

# Strapi API token with read access to posts (Settings → Global API Tokens)
STRAPI_API_TOKEN=strapi_live_token

# Secret shared with Strapi webhook to trigger ISR revalidation
REVALIDATE_SECRET=generate_a_long_random_string

# Optional: toggle mock data fallback (leave empty to auto-detect)
# USE_MOCK_DATA=false
