# ===========================================
# Strapi Environment Configuration
# ===========================================
# Copy this file to .env for local development
# Use bootstrap.ts script to generate environment-specific files

# -------------------------------------------
# Server Configuration
# -------------------------------------------
HOST=0.0.0.0
PORT=1337

# -------------------------------------------
# Security Configuration (CRITICAL - Generate unique values)
# -------------------------------------------
# Generate with: openssl rand -base64 32 (generate 6 unique values)
APP_KEYS="change-me-1,change-me-2,change-me-3,change-me-4,change-me-5,change-me-6"
API_TOKEN_SALT=change-me-api-token-salt
ADMIN_JWT_SECRET=change-me-admin-jwt-secret
TRANSFER_TOKEN_SALT=change-me-transfer-token-salt
JWT_SECRET=change-me-jwt-secret
ENCRYPTION_KEY=change-me-encryption-key

# -------------------------------------------
# Database Configuration (Environment-specific)
# -------------------------------------------
DATABASE_CLIENT=postgres

# Local: 127.0.0.1:5432
# Preview/Production: Configured via Pulumi/Railway managed database
DATABASE_HOST=127.0.0.1
DATABASE_PORT=5432
DATABASE_NAME=strapi_local
DATABASE_USERNAME=cs
DATABASE_PASSWORD=cs
DATABASE_SSL=false
DATABASE_FILENAME=

# Complete database URL (overrides individual parameters if set)
DATABASE_URL=postgres://cs:cs@127.0.0.1:5432/strapi_local

# -------------------------------------------
# CORS Configuration (Environment-specific)
# -------------------------------------------
# Local: http://localhost:3000
# Preview: https://cs-preview.vercel.app
# Staging: https://cs-staging.vercel.app
# Production: https://cs.com
URL=http://localhost:1337
ADMIN_URL=http://localhost:1337

# -------------------------------------------
# Storage & CDN Configuration
# -------------------------------------------
# Cloudflare R2 for media storage
R2_ACCOUNT_ID=your-r2-account-id
R2_ACCESS_KEY_ID=your-r2-access-key
R2_SECRET_ACCESS_KEY=your-r2-secret-key
R2_BUCKET_NAME=cs-media
R2_PUBLIC_URL=https://media.cs.com

# Local filesystem storage (development only)
UPLOAD_PROVIDER=local

# -------------------------------------------
# Email Configuration
# -------------------------------------------
# SendGrid - register at https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@cs.com
SENDGRID_FROM_NAME=Cockpit Simulator
EMAIL_DEFAULT_FROM=noreply@cs.com
EMAIL_DEFAULT_FROM_NAME=Cockpit Simulator
EMAIL_DEFAULT_REPLY_TO=noreply@cs.com

# -------------------------------------------
# Analytics & Monitoring
# -------------------------------------------
# Sentry Error Tracking
SENTRY_DSN=your-sentry-dsn
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# -------------------------------------------
# Integrations
# -------------------------------------------
# Discord webhook for community notifications
DISCORD_WEBHOOK_URL=your-discord-webhook-url

# Slack webhook for content publishing notifications
SLACK_WEBHOOK_URL=your-slack-webhook-url

# -------------------------------------------
# Feature Flags
# -------------------------------------------
# Enable/disable features per environment
ENABLE_ANALYTICS=true
ENABLE_ERROR_REPORTING=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_COMMUNITY_INTEGRATIONS=true

# -------------------------------------------
# Development Settings
# -------------------------------------------
# Enable development-specific features
DEBUG_MODE=false
ENABLE_DEV_TOOLS=false
ENABLE_SWAGGER=true
