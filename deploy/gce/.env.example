########################################
# General
########################################
NODE_ENV=production

########################################
# Medusa service
########################################
MEDUSA_IMAGE=ghcr.io/your-org/cs-medusa:latest
MEDUSA_PORT=9000
MEDUSA_DATABASE_URL=postgres://medusa_user:medusa_password@127.0.0.1:5432/medusa_prod
MEDUSA_REDIS_URL=redis://127.0.0.1:6379/0
STORE_CORS=https://store.example.com,https://www.store.example.com
ADMIN_CORS=https://admin.example.com
AUTH_CORS=https://auth.example.com,https://store.example.com
JWT_SECRET=change-me
COOKIE_SECRET=change-me-cookie
STRAPI_WEBHOOK_SECRET=change-me-webhook

# Medusa file storage (Cloudflare R2)
MEDUSA_FILE_ACCESS_KEY_ID=R2_ACCESS_KEY
MEDUSA_FILE_SECRET_ACCESS_KEY=R2_SECRET
MEDUSA_FILE_BUCKET=cs-assets
MEDUSA_FILE_REGION=auto
MEDUSA_FILE_ENDPOINT=https://<account-id>.r2.cloudflarestorage.com
MEDUSA_FILE_PUBLIC_URL=https://img.example-cdn.com
MEDUSA_FILE_PREFIX=medusa-uploads/
MEDUSA_FILE_FORCE_PATH_STYLE=true
MEDUSA_FILE_CACHE_CONTROL=
MEDUSA_FILE_DOWNLOAD_TTL=

########################################
# Strapi service
########################################
STRAPI_IMAGE=ghcr.io/your-org/cs-strapi:latest
STRAPI_HOST=0.0.0.0
STRAPI_PORT=1337
APP_KEYS=appKey1,appKey2
API_TOKEN_SALT=apiTokenSalt
ADMIN_JWT_SECRET=adminJwtSecret
TRANSFER_TOKEN_SALT=transferSalt
ADMIN_AUTH_SECRET=adminAuthSecret
STRAPI_ADMIN_BACKEND_URL=https://cms.example.com
STRAPI_TELEMETRY_DISABLED=true

# Strapi database (Postgres on host)
STRAPI_DATABASE_URL=postgres://strapi_user:strapi_password@127.0.0.1:5432/strapi_prod
STRAPI_DATABASE_HOST=127.0.0.1
STRAPI_DATABASE_PORT=5432
STRAPI_DATABASE_NAME=strapi_prod
STRAPI_DATABASE_USERNAME=strapi_user
STRAPI_DATABASE_PASSWORD=strapi_password

# Strapi upload provider (Cloudflare R2)
STRAPI_AWS_ACCESS_KEY_ID=R2_ACCESS_KEY
STRAPI_AWS_ACCESS_SECRET=R2_SECRET
STRAPI_AWS_BUCKET_NAME=cs-assets
STRAPI_AWS_REGION=auto
STRAPI_AWS_ENDPOINT=https://<account-id>.r2.cloudflarestorage.com
STRAPI_AWS_PUBLIC_URL=https://img.example-cdn.com
STRAPI_AWS_FORCE_PATH_STYLE=true
